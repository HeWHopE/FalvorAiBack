generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  recipes   Recipe[]  
  notes     Note[]   
    ratings      RecipeRating[] 

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Recipe {
  id           Int       @id @default(autoincrement())
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  name         String
  description  String?   
  ratings      RecipeRating[] 
  ingredients  String[]
  instructions String   
  imageUrl     String?   
  notes        Note[]    
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Note {
  id        Int       @id @default(autoincrement())
  recipeId  Int
  recipe    Recipe    @relation(fields: [recipeId], references: [id])
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  title     String
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}


model RecipeRating {
  id        Int       @id @default(autoincrement())
  recipeId  Int
  recipe    Recipe    @relation(fields: [recipeId], references: [id])
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  rating    Int       // 1 to 5 stars
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([recipeId, userId]) // one rating per user per recipe
}

